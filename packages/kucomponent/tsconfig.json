{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./lib", // 输出目录
    "sourceMap": false, // 是否生成sourceMap
    "target": "es6", // 编译目标
    "module": "es6", // 模块类型
    "moduleResolution": "node",
    "paths": {
      "tslib": ["node_modules/tslib/tslib.d.ts"]
    },
    "allowJs": false, // 是否编辑js文件
    "strict": true, // 严格模式
    "noUnusedLocals": false, // 未使用变量报错
    "experimentalDecorators": true, // 启动装饰器
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true, // 加载json
    "esModuleInterop": true,
    "removeComments": false, // 删除注释
    "jsx": "react-jsx",
    "declaration": true, // 生成定义文件
    "declarationMap": false, // 生成定义sourceMap
    "declarationDir": "./typings", // 定义文件输出目录
    "lib": ["es6", "dom"], // 导入库类型定义
    "types": ["node"], // 导入指定类型包,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "typings", "example"]
}
